
<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <!-- Display the @user's name -->
      <h2><%= @user.name%></h2>
      <!-- Display the @user's email -->
      <p><%= @user.email%></p>
      <% if @user.id == @current_user.id %>
        <%= link_to("Edit", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>
  </div>
</div>
